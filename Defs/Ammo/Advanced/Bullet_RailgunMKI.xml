<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoRailgunMKI</defName>
      <label>Railgun MKI</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_RailgunMKI</defName>
    <label>Railgun MKI ammo</label>
    <ammoTypes>
      <Ammo_RailgunMKI>Bullet_RailgunMKI</Ammo_RailgunMKI>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="RailgunMKIBase" ParentName="AmmoBase" Abstract="True">
    <description>Railgun MKI ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoRailgunMKI</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="RailgunMKIBase">
    <defName>Ammo_RailgunMKI</defName>
    <label>Railgun MKI cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Rifle/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseRailgunMKI" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <speed>250</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseRailgunMKI">
    <defName>Bullet_RailgunMKI</defName>
    <label>railgun bullet</label>
    <projectile>
      <damageAmountBase>35</damageAmountBase>
      <armorPenetration>3.0</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="ChargeAmmoRecipeBase">
    <defName>MakeAmmo_RailgunMKI</defName>
    <label>make RailgunMKI cartridge x10</label>
    <description>Craft 10 RailgunMKI cartridges.</description>
    <jobString>Making RailgunMKI cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_RailgunMKI>100</Ammo_RailgunMKI>
    </products>
  </RecipeDef>
	
</Defs>